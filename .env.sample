TELEGRAM_BOT_TOKEN='your_telegram_bot_token'

WINDSURF_WINDOW_TITLE = 'Windsurf'
GEMINI_API_KEY='your_gemini_api_key'

# Если требуется отправлять команды через удалённый контроллер (HTTP)
# Пример: http://127.0.0.1:8089
REMOTE_CONTROLLER_URL=

# Параметры автоматизации и ожиданий
# Сколько секунд ждать ответа ИИ после отправки
RESPONSE_WAIT_SECONDS=7.0
# Количество повторов при вставке текста (буфер обмена)
PASTE_RETRY_COUNT=2
# Количество повторов при копировании ответа
COPY_RETRY_COUNT=2
# Задержка между нажатиями клавиш в секундах
KEY_DELAY_SECONDS=0.2
# На macOS активировать приложение через AppleScript (1=да, 0=нет)
USE_APPLESCRIPT_ON_MAC=1
# Максимальное ожидание, чтобы Windsurf стал frontmost (сек)
FRONTMOST_WAIT_SECONDS=3.0
# Количество повторов при фокусировке окна
FOCUS_RETRY_COUNT=3

# Подсказка: чтобы отправлять в конкретное окно на macOS, используйте префиксы
# [#N] ваш текст — окно по индексу из /windows
# [@часть_заголовка] ваш текст — окно по подстроке в заголовке