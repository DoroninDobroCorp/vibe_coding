TELEGRAM_BOT_TOKEN='your_telegram_bot_token'

WINDSURF_WINDOW_TITLE = 'Windsurf'
GEMINI_API_KEY='your_gemini_api_key'

# Если требуется отправлять команды через удалённый контроллер (HTTP)
# Пример: http://127.0.0.1:8089
REMOTE_CONTROLLER_URL=

# Разрешённые Telegram user_id для Git-команд (через запятую)
# Пример: 123456789,987654321
GIT_ALLOWED_USER_IDS=

# Опционально: дефолтная рабочая директория для Git-команд (если не задано, будет автоопределение)
# Пример: /Users/you/Projects/your_repo
GIT_WORKDIR=

# Параметры автоматизации и ожиданий
# Сколько секунд ждать ответа ИИ после отправки
RESPONSE_WAIT_SECONDS=7.0
# Максимальное общее ожидание готового ответа (сек)
RESPONSE_MAX_WAIT_SECONDS=45.0
# Интервал опроса короткого ответа (сек)
RESPONSE_POLL_INTERVAL_SECONDS=0.8
# Минимальное стабильное время без изменений, чтобы считать ответ готовым (сек)
RESPONSE_STABLE_MIN_SECONDS=1.6
# Количество повторов при вставке текста (буфер обмена)
PASTE_RETRY_COUNT=2
# Количество повторов при копировании ответа
COPY_RETRY_COUNT=2
# Задержка между нажатиями клавиш в секундах
KEY_DELAY_SECONDS=0.2
# На macOS активировать приложение через AppleScript (1=да, 0=нет)
USE_APPLESCRIPT_ON_MAC=1
# Опционально: детекция готовности по кнопке отправки (анализ цвета в правом нижнем углу окна)
USE_UI_BUTTON_DETECTION=0
# Геометрия региона (от правого/нижнего края окна)
SEND_BTN_REGION_RIGHT=84
SEND_BTN_REGION_BOTTOM=58
SEND_BTN_REGION_W=54
SEND_BTN_REGION_H=36
# Порог синевы для стрелки отправки (чем больше, тем агрессивнее распознаётся "send")
SEND_BTN_BLUE_DELTA=40
# Порог яркости для белого квадрата ("stop")
SEND_BTN_WHITE_BRIGHT=200
# Максимальное ожидание, чтобы Windsurf стал frontmost (сек)
FRONTMOST_WAIT_SECONDS=3.0
# Количество повторов при фокусировке окна
FOCUS_RETRY_COUNT=3

# Подсказка: чтобы отправлять в конкретное окно на macOS, используйте префиксы
# [#N] ваш текст — окно по индексу из /windows
# [@часть_заголовка] ваш текст — окно по подстроке в заголовке